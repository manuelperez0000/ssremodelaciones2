---
import menu from "./menu.json";
---

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand brand-a" href="/">
            <img class="logo-menu-sup" src="/logo2.png" alt="" />
        </a>
        <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
        >
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/">
                        <i class="bi bi-house mx-1"></i>
                        Inicio</a>
                </li>
                {
                    menu.map((item) => {
                        return (
                            <div class="nav-item">
                                <a
                                    class="nav-link"
                                    aria-current="page"
                                    href={item.href}
                                >
                                    <i class={`mx-1 bi ${item.icon}`}></i> {item.name}
                                </a>
                            </div>
                        );
                    })
                }
            </ul>
            <form class="flex-center">
                <a
                    href="https://api.whatsapp.com/send/?phone=50670068477&text&type=phone_number&app_absent=0"
                    target="_blank"
                    class="btn btn-success text-light wsap"
                >
                    <i class="bi bi-whatsapp text-light mx-1"></i> Escribenos
                </a>
            </form>
        </div>
    </div>
</nav>

<style>
    .wsap:hover {
        background-color: rgb(63, 148, 52) !important;
        color: rgb(242, 242, 242) !important;
    }

    .logo-menu-sup {
        display: block;
        width: 150px !important;
        height: 30px !important;
    }
    .brand-a {
        max-width: 150px;
        display: flex;
    }

    nav {
        background-color: rgb(255, 255, 255);
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding-top: 10px;
        padding-bottom: 10px;
        box-shadow: 0px 0px 7px 4px rgba(117, 117, 117, 0.269);
    }
    nav img {
        height: 40px;
    }
    .nav-buttons {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
    }
    a {
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 10px 30px;
        border-radius: 3px;
        text-decoration: none;
        color: rgb(88, 88, 88);
        transition: 0.3s;
    }
    a:hover {
        background-color: rgba(227, 227, 227, 0.402);
        color: rgb(24, 24, 24);
    }
    .btn-ws:hover {
        background-color: rgb(26, 137, 50);
    }
</style>
