---
import menu from './menu.json'
---
<nav class="px-4">
    <img src="/logo2.png" alt="" />
    <div class="nav-buttons">
        <div>
            <a href="/">Inicio</a>
        </div>
        {menu.map((item)=>{
            return <div>
            <a href={item.href}>{item.name}</a>
        </div>
        })}
        <div>
            <a target="_blank" href="https://api.whatsapp.com/send/?phone=50670068477&text&type=phone_number&app_absent=0" class="btn btn-success text-light btn-ws">
                <i class="bi bi-whatsapp text-light mx-1"></i> Escribenos!
            </a>
        </div>
    </div>
</nav>

<style>
    nav {
        background-color: rgb(255, 255, 255);
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding-top: 10px;
        padding-bottom: 10px;
        box-shadow: 0px 0px 7px 4px rgba(117, 117, 117, 0.269);
    }
    nav img {
        height: 40px;
    }
    .nav-buttons {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
    }
    a {
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 10px 30px;
        border-radius: 3px;
        text-decoration: none;
        color: rgb(88, 88, 88);
        transition: 0.3s;
    }
    a:hover {
        background-color: rgba(227, 227, 227, 0.402);
        color: rgb(24, 24, 24);
    }
    .btn-ws:hover{
        background-color: rgb(26, 137, 50);
    }
</style>
