---
const {name,description,catalogo,foto} = Astro.props
---
<div class="col-12">
    <div class="row product-wraper mb-4 g-0">
        <div class="col-12 col-lg-3">
            <img class="img-categories" width="100%" src={foto} alt="">
        </div>
        <div class="product-info p-3 col-12 col-lg-9">
            <h1 class="m-0 p-0">{name}</h1>
            <p>
                {description}
            </p>
            {catalogo ? <a target="_blank" href={catalogo} class="btn btn-primary"> 
            <i class="bi bi-download"></i>
             Descargar el catalogo </a> :
            <a
                    href="https://api.whatsapp.com/send/?phone=50670068477&text&type=phone_number&app_absent=0"
                    target="_blank"
                    class="btn btn-success text-light wsap"
                >
                    <i class="bi bi-whatsapp text-light mx-1"></i> Solicitar informacion
                </a>
        }
            
        </div> 
    </div>
