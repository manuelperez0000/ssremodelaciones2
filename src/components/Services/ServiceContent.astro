---
const { tittle, image, list } = Astro.props;
---

<div class="row mb-4 pb-4 border-bottom pt-4">
    <div class="col-xs-12 col-md-4 col-lg-3">
        <div class="w-images mb-2">
            <img class="img-services" width="100%" src={image} alt="" />
        </div>
    </div>

    <div class="col-xs-12 col-md-8 col-lg-9">
        <div class="text-services text-start text-light">
            <h2>{tittle}</h2>
            {list.map((i: any) => <p>{i}</p>)}
        </div>
    </div>
</div>

