<div class="col-12 col-md-6 bg-gray-2 p-4">
    <h4>Envianos un whatsapp</h4>
    <textarea
        id="mensaje"
        placeholder="Escribe tu mensaje..."
        class="form-control mb-2"
        cols="30"
        rows="4"></textarea>
    <div class="text-end">
        <button id="enviarBtn" class="btn btn-success px-5">
            <i class="bi bi-whatsapp"></i> Enviar
        </button>
    </div>
</div>

<script is:inline>
    let userMessage = "";
    const sendMessage = () => {
        const url =
            "https://api.whatsapp.com/send/?phone=50670068477&text=" +
            userMessage +
            "&type=phone_number&app_absent=0";
        window.open(url, "_blank");
    };

    document.querySelector("#enviarBtn")?.addEventListener("click", () => {
        sendMessage();
    });

    document.querySelector("#mensaje")?.addEventListener("input", (event) => {
        userMessage = event?.target?.value;
    });
</script>
