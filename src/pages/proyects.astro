---
import { Galeria } from "../components/Galeria/Galeria";
import AppLayout from "../layouts/AppLayout.astro";
---

<AppLayout>
    <h1 class="text-center my-4">Nuestros Proyectos</h1>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <Galeria client:load />
            </div>
        </div>
    </div>
</AppLayout>

<style is:global>
    .content-image {
        display: grid;
        gap: 5px;
        margin-bottom: 100px;
        grid-template-columns: repeat(5 , minmax(150px, 1fr));
       /*  display: grid;
        grid-template-columns: repeat(3, 1fr) !important;
        gap: 5px;
        margin-bottom: 100px;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center; */
    }

    

    .img-detail {
        display: flex;
        width: 100%;
        height: 100%;
        object-fit: cover;
        grid-column: span 4;
       /*  max-height: 80vh;
        transition: 1s;
        filter: brightness(1.2);
        box-shadow: 0 10px 20px rgba(255, 255, 255, 0.2); */
    }
    .img-modal-ext{
        max-height: 95%;
        max-width: 90%;
    }

    .img-detail:hover {
        cursor: pointer;
        transform: scale(1.01);
    }
    .box:nth-child(1) {
        grid-column: span 4;
    }
    .box:nth-child(1) {
        grid-column: span 2;
    }
    .box:nth-child(2) {
        grid-column: span 1;
    }

    .bg-modal {
        background-color: rgba(22, 22, 22, 0.676);
        display: flex;
        align-items: top;
        justify-content: center;
        position: fixed;
        z-index: 1;
        width: 100vw;
        height: 100vh;
        top: 0px;
        left: 0px;
    }

    .body-modal {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        height: calc(100% - 60px);
    }

    .modal-buttons {
        position: absolute;
        bottom: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 20px;
        width: 100vw;
    }
    .modal-arrows {
        width: 40px;
        height: 40px;
        border-radius: 20px;
        background-color: white;
        color: black;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        font-weight: 600;
        padding: 0px;
        line-height: 25px;
        border: none;
    }
    .btn-close-modal {
        height: 40px;
        background-color: white;
        border: none;
        border-radius: 20px;
        color: rgb(30, 30, 30);
        font-size: 20px;
        padding: 0px 20px;
    }
    .modal-arrows i {
        color: rgb(30, 30, 30);
    }
</style>

<script src="../components/Main/Main.js"></script>
