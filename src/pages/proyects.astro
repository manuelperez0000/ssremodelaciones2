---
import { Galeria } from "../components/Galeria/Galeria";
import AppLayout from "../layouts/AppLayout.astro";
---

<AppLayout>
    <h1 class="text-center my-4">Nuestros Proyectos</h1>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <Galeria client:load />
            </div>
        </div>
    </div>
</AppLayout>

<style is:global>
    /* .img-detail {
        display: flex;
        width: 100%;
        height: 100%;
        object-fit: cover;
        grid-column: span 5;
        border: 3px solid red;
    } */
    .img-modal-ext {
        max-height: 95%;
        max-width: 90%;
        min-height: 50%;
        object-fit: contain;
        user-select: none; /* Evita la selecci√≥n del contenido */
        pointer-events: auto; /* Asegura que los eventos se capturen correctamente */
        -webkit-user-drag: none;
    }

    .box:nth-child(1) {
        grid-column: span 4;
    }
    .box:nth-child(1) {
        grid-column: span 2;
    }
    .box:nth-child(2) {
        grid-column: span 1;
    }

    .bg-modal {
        background-color: rgba(22, 22, 22, 0.817);
        display: flex;
        align-items: top;
        justify-content: center;
        position: fixed;
        z-index: 1;
        width: 100vw;
        height: 100vh;
        top: 0px;
        left: 0px;
    }

    .body-modal {
        overflow-y: auto; /* Agrega una barra de desplazamiento vertical si es necesario */
        overflow-x: hidden;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        height: calc(100% - 60px);
    }

    .modal-buttons {
        position: absolute;
        bottom: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 20px;
        width: 100vw;
    }
    .modal-arrows {
        width: 40px;
        height: 40px;
        border-radius: 20px;
        background-color: white;
        color: black;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        font-weight: 600;
        padding: 0px;
        line-height: 25px;
        border: none;
    }
    .btn-close-modal {
        height: 40px;
        background-color: white;
        border: none;
        border-radius: 20px;
        color: rgb(30, 30, 30);
        font-size: 20px;
        padding: 0px 20px;
    }
    .modal-arrows i {
        color: rgb(30, 30, 30);
    }
</style>

<script src="../components/Main/Main.js"></script>
