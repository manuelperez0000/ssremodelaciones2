---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer/Footer.astro";
import Services from "../components/Services/Services.astro";
import Ventajas from "../components/Ventajas/Ventajas.astro";
import Stoneflex from "../components/Stoneflex/Stoneflex.astro";
import MenuHome from "../components/NavBar/MenuHome.astro";
import NavBarMobile from "../components/NavBarMobile/NavBarMobile.astro";
import PorqueElegirnos from "../components/Seo/PorqueElegirnos.astro"
---

<Layout>
	<NavBarMobile />
	<section id="sec1">
		<video autoplay muted loop id="background-video">
			<source src="/cuna.webm" type="video/mp4" />
		</video>
		<div class="content">
			<div class="text-center">
				<img height="110px" src="/logo.png" alt="logo" />
				<div class="w-welcome-text">
					<h1 style={{color:'white'}} class="welcome-text anton text-light bg-dark">
						Remodelaciones en Costa Rica
					</h1>
				</div>
				<div class="seo-principal container">
					<div class="row">
						<div class="col-6 col-md-4"><h2>Servicios de remodelación</h2></div>
						<div class="col-6 col-md-4"><h2>Renovación de casas</h2> </div>
						<div class="col-12 col-md-4"><h2>Remodelaciones comerciales</h2></div>
					</div>
				</div>

				<p class="mt-2">
					En SS Remodelaciones le ofrecemos una gran varierad de
					servicios y productos para su hogar u ofcina
				</p>

				<MenuHome />

				<div id="scroll-down-p" class="chevron flex-center scroll-down">
					<div class="btn-chevron">
						<i class="bi bi-chevron-double-down rounded-btn"></i>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section id="sec4">
		<Stoneflex />
	</section>

	<section id="sec2">
		<Services />
	</section>

	<section id="sec3">
		<Ventajas />
	</section>

	<section id="sec4">
		<PorqueElegirnos />
	</section>

	<Footer />
</Layout>

<script src="../components/Main/Main.js"></script>
